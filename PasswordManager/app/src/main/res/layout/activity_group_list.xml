<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.passwordmanager.GroupListActivity">

    /*-------------------------------标题栏--------------------------------------------*/
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/group_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:id="@+id/titlebar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分组列表"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        /*------------------------------分组列表---------------------------------*/
        <RelativeLayout
            android:id="@+id/grouplist_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_RecyclerView">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        /*---------------------------------最近查看------------------------------------*/
        <RelativeLayout
            android:id="@+id/recent_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recent_RecyclerView">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        /*_________________________________设置———————————____________________________________*/
        <RelativeLayout
            android:id="@+id/setting_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/setting_item"
                android:layout_alignParentTop="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/setting_icon"
                    android:src="@mipmap/change"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_title"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="更改密码"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/setting_icon"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/right"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dimgray"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sending_item"
                android:layout_alignTop="@+id/setting_item"
                android:layout_marginTop="60dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/sending_icon"
                    android:src="@mipmap/sending"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sending_title"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="备份密码至邮箱"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/sending_icon"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/right"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dimgray"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/changePassword_layout"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:background="@color/smokewhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="50dp">
                    <TextView
                        android:id="@+id/original_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原密码"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"/>
                    <TextView
                        android:id="@+id/new_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新密码"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="50dp"/>
                    <TextView
                        android:id="@+id/confirm_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认新密码"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="100dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入原密码"
                        android:id="@+id/origanalPassword"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/original_t"
                        android:layout_marginLeft="50dp"
                        android:textSize="15dp"
                        android:background="@null"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入新密码"
                        android:id="@+id/setnewPassword"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:layout_alignTop="@+id/new_t"
                        android:layout_alignLeft="@+id/origanalPassword"
                        android:textSize="15dp"
                        android:background="@null"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="再次输入新密码"
                        android:id="@+id/comfirmnewPassword"
                        android:inputType="textPassword"
                        android:layout_alignTop="@+id/confirm_t"
                        android:layout_alignLeft="@+id/origanalPassword"
                        android:textSize="15dp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="提交"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/submit_btn"
                        android:background="@drawable/btn"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp" />
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="取消"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:id="@+id/cancel_btn"
                        android:background="@drawable/text"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
