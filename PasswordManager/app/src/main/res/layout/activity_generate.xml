<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.passwordmanager.GenerateActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/generate_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <Button
                android:id="@+id/generate_back"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:background="@null"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="密码生成器"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码长度"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/minus_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/minus"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"/>
            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"/>
            <ImageView
                android:id="@+id/plus_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/plus"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大写字母"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小写字母"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数字"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特殊符号"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp"/>
            <CheckBox
                android:id="@+id/isUpper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:checked="true"/>
            <CheckBox
                android:id="@+id/isLower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/isUpper"
                android:layout_marginTop="50dp"
                android:checked="true"/>
            <CheckBox
                android:id="@+id/isNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/isUpper"
                android:layout_marginTop="100dp"
                android:checked="true"/>
            <CheckBox
                android:id="@+id/isChar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/isUpper"
                android:layout_marginTop="150dp"
                android:checked="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/generated_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="8fD0#1"
                android:textSize="15dp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/text"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:id="@+id/flesh_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/flesh"
                android:layout_alignLeft="@+id/generated_password"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/generate_ok"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="确 定"
            android:textSize="17dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
